{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "Node", 
        "outDir": "dist/",
        "baseUrl": "./",
        "sourceMap": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["./src/*"],
            "@test/*": ["./test/*"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "types/**/*.d.ts",
        "screeps.d.ts",
        "test/**/*.ts"
    ]
}