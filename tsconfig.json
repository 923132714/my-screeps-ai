{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "Node", 
        "outDir": "dist/",
        "baseUrl": "src/",
        "sourceMap": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts",
        "types/**/*.d.ts",
        "screeps.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}